		"prettier-plugin-curly": "^0.3.1",
		"prettier-plugin-packagejson": "^2.5.6",
		"release-it": "^17.10.0",
		"sentences-per-line": "^0.3.0",
		"should-semantic-release": "^0.3.0",
		"tsup": "^8.3.5",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.1",
		"vitest": "^2.1.8"
	},
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"provenance": true
	}
